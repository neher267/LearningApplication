<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neher.ecl.learningapplication.MainActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:background="@drawable/background">



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_vie1w"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:gravity="center"
            android:id="@+id/log_in_id"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Have an account? Login"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_input_black_24dp"
            android:padding="15dp"
            android:background="@color/inputColor"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_vie2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:gravity="center"
            android:id="@+id/worm_up_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WORM UP TEST"
            android:textStyle="bold"
            android:textColor="@color/txtColor"
            android:background="@color/btn_color"
            android:padding="15dp"/>
    </android.support.v7.widget.CardView>





</LinearLayout>
